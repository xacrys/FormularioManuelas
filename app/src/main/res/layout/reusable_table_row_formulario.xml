<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filatableRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_row_selector"
    android:clickable="true"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/columnaCodigoVivTextView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="5dip"
                android:text=""
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/columnaFechaRegistroTextView"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="5dip"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/columnaCertificadoTextView"
                android:layout_height="match_parent"
                android:layout_width="140dp"
                android:gravity="left"
                android:padding="5dip"
                android:text=""
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/columnaZonaTextView"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="5dip"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/columnaSectorTextView"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="5dip"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/columnaManzanaTextView"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="10dip"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/columnaEdificioTextView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="10dip"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/columnaViviendaTextView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="10dip"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/columnaHogarInicialFinalTextView"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="10dip"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/columnaNumeroVisitasTextView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="10dip"
                android:text=""
                android:textColor="#000000" />


            <TextView
                android:id="@+id/columnaEstadoTextView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="10dip"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/columnaObservacionTextView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="10dip"
                android:text=""
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <Button
            android:id="@+id/buscarPersonasButton"
            style="@style/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:text="Miembros del hogar" 
            android:visibility="gone"/>
    </LinearLayout>

</TableRow>