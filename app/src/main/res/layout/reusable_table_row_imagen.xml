<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filatableRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_row_selector"
    android:clickable="true"
    android:padding="10dp" >

    <TextView 
        android:id="@+id/columnaIdTextView"
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:gravity="left"
        android:padding="10dip"
        android:text="Id"
        android:textColor="#000000" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/columnaCodigoVivTextView"
        android:layout_height="match_parent"
        android:layout_width="150dp"
        android:gravity="left"
        android:padding="10dip"
        android:text="@string/columna_codigo_viv"
        android:textColor="#000000" />
    
    <TextView
        android:id="@+id/columnaTipoTextView"
        android:layout_height="match_parent"
        android:layout_width="150dp"
        android:gravity="left"
        android:padding="10dip"
        android:text="Tipo"
        android:textColor="#000000" />
    
    
    <TextView
        android:id="@+id/columnaFechaTextView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
         android:layout_weight="1"
        android:gravity="left"
        android:padding="10dip"
        android:text="@string/columna_fecha_registro"
        android:textColor="#000000" />

    
    <TextView
          android:id="@+id/columnaEstadoTextView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
         android:layout_weight="1"
        android:gravity="left"
        android:padding="10dip"
        android:text=""
        android:textColor="#000000" />

    
</TableRow>